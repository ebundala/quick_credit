{
    "openapi": "3.0.1",
    "info": {
        "title": "Quick Credit",
        "description": "a backend server for quick credit web app",
        "termsOfService": "/terms/",
        "contact": {
            "email": "ebundala@gmail.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://peaceful-stream-51240.herokuapp.com/api/v1"
        },
        {
            "url": "https://peaceful-stream-51240.herokuapp.com/api/v1"
        }
    ],
    "security": [
        {
            "BearerAuth": []
        }
    ],
    "paths": {
        "/auth/signup": {
            "post": {
                "tags": [
                    "signup"
                ],
                "summary": "Create user account",
                "description": "create new user account",
                "operationId": "signup",
                "requestBody": {
                    "description": "a plain user object",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "signup success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Invalid input",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                },
                "security": []
            }
        },
        "/auth/signin": {
            "post": {
                "tags": [
                    "signin"
                ],
                "summary": "signin a user",
                "description": "signin a registered user",
                "operationId": "signin",
                "requestBody": {
                    "description": "a users password",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserCredentials"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "login success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "failed to login",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                },
                "security": []
            }
        },
        "/users/:email/verify": {
            "patch": {
                "tags": [
                    "verify user"
                ],
                "summary": "verify user using email",
                "description": "verify user by email address",
                "operationId": "verifyUser",
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "description": "users email",
                        "required": true,
                        "style": "simple",
                        "explode": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "user verified",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "invalid input",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/loans/:loanId": {
            "get": {
                "tags": [
                    "get specific loan"
                ],
                "summary": "get a specific loan by its id",
                "operationId": "getLoanById",
                "parameters": [
                    {
                        "name": "loanId",
                        "in": "path",
                        "description": "a loan id to fetch",
                        "required": true,
                        "style": "simple",
                        "explode": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "invalid input",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "tags": [
                    "approve or reject loan"
                ],
                "summary": "approve or reject a given loan",
                "operationId": "approveLoanById",
                "parameters": [
                    {
                        "name": "loanId",
                        "in": "path",
                        "description": "a loan id to process",
                        "required": true,
                        "style": "simple",
                        "explode": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "string",
                                "enum": [
                                    "approved",
                                    "rejected"
                                ]
                            }
                        }
                    },
                    "required": false
                },
                "responses": {
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "invalid input",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/loans": {
            "get": {
                "tags": [
                    "get loans by status"
                ],
                "summary": "get loans by status",
                "operationId": "getLoanByStatus",
                "parameters": [
                    {
                        "name": "status",
                        "in": "query",
                        "description": "determine wether approved ,rejected or pending loans are fetched ",
                        "required": false,
                        "style": "form",
                        "explode": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "approved",
                                "rejected",
                                "pending"
                            ]
                        }
                    },
                    {
                        "name": "repaid",
                        "in": "query",
                        "description": "wether paid or not paid loans are fetched",
                        "required": false,
                        "style": "form",
                        "explode": true,
                        "schema": {
                            "type": "boolean"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "invalid input",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "apply for new loan"
                ],
                "summary": "post a new loan application",
                "operationId": "postLoanApplication",
                "requestBody": {
                    "description": "a loan application object",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Loan"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "invalid input",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/loans/:loanId/repayments": {
            "get": {
                "tags": [
                    "get repayment history of a loan"
                ],
                "summary": "get repayment history of a loan by its id",
                "operationId": "getLoanRepaymentHistoryById",
                "parameters": [
                    {
                        "name": "loanId",
                        "in": "path",
                        "description": "a loan id to lookup repayment history for",
                        "required": true,
                        "style": "simple",
                        "explode": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "invalid input",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "post a repayment of a loan"
                ],
                "summary": "post a repayment of a loan by its id",
                "operationId": "postLoanRepaymentById",
                "parameters": [
                    {
                        "name": "loanId",
                        "in": "path",
                        "description": "a loan id to lookup",
                        "required": true,
                        "style": "simple",
                        "explode": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json:": {
                            "schema": {
                                "$ref": "#/components/schemas/Repayment"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json:": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "invalid input",
                        "content": {
                            "application/json:": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "SuccessResponse": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "data": {
                        "type": "object",
                        "properties": {}
                    }
                }
            },
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "address": {
                        "type": "string"
                    },
                    "isAdmin": {
                        "type": "boolean"
                    },
                    "status": {
                        "type": "string",
                        "description": "User Status",
                        "enum": [
                            "unverified",
                            "verified"
                        ]
                    }
                }
            },
            "Loan": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "user": {
                        "type": "string"
                    },
                    "createdOn": {
                        "type": "string",
                        "format": "Date-time"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "pending",
                            "approved",
                            "rejected"
                        ]
                    },
                    "repaid": {
                        "type": "boolean"
                    },
                    "tenor": {
                        "maximum": 12,
                        "minimum": 1,
                        "type": "integer",
                        "format": "int32"
                    },
                    "amount": {
                        "type": "integer"
                    },
                    "paymentInstallment": {
                        "type": "number"
                    },
                    "balance": {
                        "type": "number"
                    },
                    "interest": {
                        "type": "number"
                    }
                }
            },
            "UserCredentials": {
                "type": "object",
                "properties": {
                    "password": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            },
            "Repayment": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "createdOn": {
                        "type": "string",
                        "format": "Date-time"
                    },
                    "loanId": {
                        "type": "integer"
                    },
                    "amount": {
                        "type": "integer",
                        "format": "int32"
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "error": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    }
}